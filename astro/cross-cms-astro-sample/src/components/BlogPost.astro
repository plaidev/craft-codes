---
const { post } = Astro.props;
---

<article class="post-card">
  <a href={'/posts/'+post.id} class="post-link">
    <div class="post-content">
      <div class="post-image">
        {post.image && post.image.src && (
          <img src={post.image.src} alt={post.image.altText || post.title} />
        )}
      </div>
      <div class="post-details">
        <h2 class="post-title">{post.title}</h2>
        <p class="post-description">{post.description}</p>
        <div class="post-meta">
          <div class="meta-info">
            <span class="post-date">{new Date(post.pubDate).toLocaleDateString('ja-JP')}</span>
            <span class="post-author">by {post.author}</span>
          </div>
          <div class="post-tags">
            {post.tags && post.tags.slice(0, 3).map((tag: string) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </a>
</article>

<style>
  .post-card {
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .post-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .post-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .post-content {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem;
  }

  .post-image {
    flex-shrink: 0;
    width: 200px;
    height: 150px;
    border-radius: 8px;
    overflow: hidden;
    background: #f5f5f5;
  }

  .post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-details {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .post-title {
    color: #333;
    font-size: 1.4rem;
    font-weight: 600;
    margin: 0 0 0.8rem 0;
    line-height: 1.4;
  }

  .post-description {
    color: #666;
    font-size: 1rem;
    line-height: 1.6;
    margin: 0 0 1rem 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    gap: 1rem;
  }

  .meta-info {
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .post-date {
    color: #888;
    font-size: 0.9rem;
  }

  .post-author {
    color: #666;
    font-size: 0.9rem;
    font-weight: 500;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    align-items: flex-end;
  }

  .tag {
    background: #2aab9f;
    color: white;
    padding: 0.3rem 0.6rem;
    border-radius: 12px;
    font-size: 0.8rem;
    font-weight: 500;
  }

  .post-card:hover .post-title {
    color: #2aab9f;
  }

  @media (max-width: 768px) {
    .post-content {
      flex-direction: column;
      padding: 1.2rem;
      gap: 1rem;
    }

    .post-image {
      width: 100%;
      height: 200px;
    }

    .post-title {
      font-size: 1.2rem;
    }

    .post-meta {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .post-content {
      padding: 1rem;
    }

    .post-image {
      height: 180px;
    }

    .post-title {
      font-size: 1.1rem;
    }

    .tag {
      font-size: 0.75rem;
      padding: 0.25rem 0.5rem;
    }
  }
</style>